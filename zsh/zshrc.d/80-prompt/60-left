# Left prompt
# 1 = left-to-right
mkprompt_start "PROMPT" 1

if is_ssh ; then
	mkprompt_username "$fg[blue]" "$bg[magenta]$fg_bold[black]"
	mkprompt_delim "@"
	mkprompt_hostname "$fg[yellow]"
	mkprompt_delim ":"
fi
mkprompt_cwd "$fg[yellow]"
mkprompt_prompt
mkprompt_apply_delim
