#
# ls-related configuration and aliases

#######
# Aliases
alias ls="ls --color=auto --hide='*.pyc' --hide='__pycache__'"
alias l.='ls -d .* --color=auto'

alias ll='ls -l --color=auto'
alias ll.='ls -ld .* --color=auto'

alias la="ls -a"
alias lla="ll -a"

#######
# LS_COLORS
eval `dircolors --sh $ZSH_DIRCOLORS_PATH`
